{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Backstage Helm Chart Values",
  "type": "object",
  "required": ["replicaCount", "image", "service"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of replicas for the Backstage deployment"
    },
    "image": {
      "type": "object",
      "required": ["repository", "tag"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "Docker image repository"
        },
        "tag": {
          "type": "string",
          "description": "Docker image tag"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Kubernetes image pull policy"
        }
      }
    },
    "service": {
      "type": "object",
      "required": ["port"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Kubernetes service type"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Service port"
        },
        "targetPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Target port on the container"
        }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable PostgreSQL subchart"
        },
        "auth": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "PostgreSQL username"
            },
            "password": {
              "type": "string",
              "description": "PostgreSQL password"
            },
            "database": {
              "type": "string",
              "description": "PostgreSQL database name"
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "enablePostgres": {
          "type": "boolean",
          "description": "Enable PostgreSQL features"
        }
      }
    },
    "hooks": {
      "type": "object",
      "properties": {
        "preInstall": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable pre-install hooks"
            }
          }
        },
        "postInstall": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable post-install hooks"
            }
          }
        },
        "preUpgrade": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable pre-upgrade hooks"
            }
          }
        },
        "postUpgrade": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable post-upgrade hooks"
            }
          }
        },
        "preRollback": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable pre-rollback hooks"
            }
          }
        },
        "postRollback": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable post-rollback hooks"
            }
          }
        }
      }
    }
  }
}